# YM7 Hobby - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ========================
# APPLICATION SETTINGS
# ========================
NODE_ENV=production
PORT=3001
BASE_URL=https://ym.betahobby.dpdns.org
ALLOWED_ORIGINS=https://ym.betahobby.dpdns.org,http://localhost

# ========================
# SECURITY KEYS
# ========================
# Generate secure random strings (64 characters recommended)
JWT_SECRET=your_64_character_super_secure_jwt_secret_here
JWT_REFRESH_SECRET=your_64_character_super_secure_refresh_secret_here

# ========================
# DATABASE CONFIGURATION
# ========================
DB_USER=ymt_superadmin
DB_HOST=localhost
DB_NAME=ymd_hobby
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432

# ========================
# EMAIL SERVICE (Optional)
# ========================
# Configure if you want email verification and password reset
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
FROM_EMAIL=noreply@ym.betahobby.dpdns.org

# ========================
# REDIS (Optional - for sessions)
# ========================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# ========================
# FILE UPLOADS (Optional)
# ========================
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
AVATAR_UPLOAD_PATH=./uploads/avatars

# ========================
# MONITORING (Optional)
# ========================
LOG_LEVEL=info
ENABLE_METRICS=true

# ========================
# WEBSOCKET SETTINGS
# ========================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=10240

# ========================
# RATE LIMITING
# ========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
